{
  "include": ["src/**/*.ts", "eslint.config.js", "vite.config.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    // Enable latest features
    "lib": ["dom", "DOM.Iterable", "esnext"],
    "target": "es2022",
    "moduleDetection": "force",

    // Output
    "noEmit": true,

    // Types
    "types": ["chrome-types"],

    // Vanilla JS
    "checkJs": true,
    "allowJs": true,

    // Module
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true
  }
}
